<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Godhpadi Buildings</name>
  
    <!-- Style for RED BOUNDARIES with LABELS -->
    <Style id="redBorderWithLabel">
      <LineStyle>
        <color>ff0000ff</color>  <!-- Red border (AABBGGRR format) -->
        <width>3</width>        <!-- Border thickness -->
      </LineStyle>
      <PolyStyle>
        <color>4d0000ff</color>  <!-- Semi-transparent red fill (optional) -->
        <fill>1</fill>          <!-- Fill enabled -->
        <outline>1</outline>     <!-- Show outline -->
      </PolyStyle>
      <LabelStyle>
        <color>ff0000ff</color>  <!-- Red text -->
        <scale>1.2</scale>       <!-- Text size -->
      </LabelStyle>
    </Style>

    <!-- ===== BUILDING 1: Sai Apartments ===== -->
    <Placemark>
      <name>Sai Apartments</name>
      <styleUrl>#redBorderWithLabel</styleUrl>
      <Polygon>
        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
              73.9080,18.5920,0
              73.9085,18.5920,0
              73.9085,18.5925,0
              73.9080,18.5925,0
              73.9080,18.5920,0
            </coordinates>
          </LinearRing>
        </outerBoundaryIs>
      </Polygon>
      <Point>
        <coordinates>73.90825,18.59225,0</coordinates>  <!-- Label position (center) -->
      </Point>
    </Placemark>

    <!-- ===== BUILDING 2: Godhpadi Heights ===== -->
