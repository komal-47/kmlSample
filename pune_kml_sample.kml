        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
              73.9070,18.5915,0
              73.9075,18.5915,0
              73.9075,18.5920,0
              73.9070,18.5920,0
              73.9070,18.5915,0
            </coordinates>
          </LinearRing>
        </outerBoundaryIs>
      </Polygon>
      <Point>
        <coordinates>73.90725,18.59175,0</coordinates>  <!-- Label position -->
      </Point>
    </Placemark>

    <!-- ===== BUILDING 3: Pune Residency ===== -->
